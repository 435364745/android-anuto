<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context="ch.bfh.anuto.InventoryFragment">

    <view
        style="@style/InventoryItem"
        class="ch.bfh.anuto.TowerView"
        android:id="@+id/view_canon"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        app:itemClass="ch.bfh.anuto.game.objects.impl.Canon" />

    <view
        style="@style/InventoryItem"
        class="ch.bfh.anuto.TowerView"
        android:id="@+id/view_canon_dual"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/view_canon"
        app:itemClass="ch.bfh.anuto.game.objects.impl.CanonDual" />

    <view
        style="@style/InventoryItem"
        class="ch.bfh.anuto.TowerView"
        android:id="@+id/view_canon_mg"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/view_canon_dual"
        app:itemClass="ch.bfh.anuto.game.objects.impl.CanonMG" />

    <view
        style="@style/InventoryItem"
        class="ch.bfh.anuto.TowerView"
        android:id="@+id/view_mortar"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/view_canon_mg"
        app:itemClass="ch.bfh.anuto.game.objects.impl.Mortar" />

    <view
        style="@style/InventoryItem"
        class="ch.bfh.anuto.TowerView"
        android:id="@+id/view_rocket_launcher"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/view_mortar"
        app:itemClass="ch.bfh.anuto.game.objects.impl.RocketLauncher" />

    <view
        style="@style/InventoryItem"
        class="ch.bfh.anuto.TowerView"
        android:id="@+id/view_mine_layer"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/view_rocket_launcher"
        app:itemClass="ch.bfh.anuto.game.objects.impl.MineLayer" />

    <view
        style="@style/InventoryItem"
        class="ch.bfh.anuto.TowerView"
        android:id="@+id/view_laser_tower"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/view_mine_layer"
        app:itemClass="ch.bfh.anuto.game.objects.impl.LaserTower" />
</RelativeLayout>
